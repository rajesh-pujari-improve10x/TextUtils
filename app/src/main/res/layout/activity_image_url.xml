<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ImageUrlActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Url"
        android:textColor="#423F3F"
        android:textSize="16sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/image_url_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter image Url"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/preview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:backgroundTint="#3DCFE8"
        android:text="Preview"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/image_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/b74f7396_d095_4e37_99a5_d29476c1ab26" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/flip_horizontal_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#3DCFE8"
            android:text="Flip Horizontal"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/left_rotate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="#3DCFE8"
            app:srcCompat="@drawable/ic_baseline_turn_left_24" />

        <ImageButton
            android:id="@+id/right_rotate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="#3DCFE8"
            app:srcCompat="@drawable/ic_baseline_turn_right_24" />

        <Button
            android:id="@+id/flip_vertical_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:backgroundTint="#3DCFE8"
            android:text="Flip Vertical"
            android:textAllCaps="false"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>